{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="site-block-wrap">
    <div class="owl-carousel with-dots">
        <div class="site-blocks-cover overlay overlay-2" style="background-image: url({{ asset('images/hero_1.jpg') }});" data-aos="fade" id="home-section">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-6 mt-lg-5 text-center">
                        <h1 class="text-shadow">Trouvez votre futur bien</h1>
                        <p class="mb-5 text-shadow">En un clic des centaines de références à votre disposition</p>
                        <p><a href="{{ path('searchBar') }}" class="btn btn-primary px-5 py-3">Recherche</a></p>

                    </div>
                </div>
            </div>

        </div>

        <div class="site-blocks-cover overlay overlay-2" style="background-image: url({{ asset('images/hero_2.jpg') }});" data-aos="fade" id="home-section">


            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-6 mt-lg-5 text-center">
                        <h1 class="text-shadow">GLYF IMMO gère pour vous</h1>
                        <p class="mb-5 text-shadow">Avec l'équipe de GLYF IMMO construisez votre rêve immo.</p>
                        <p><a href="{{ path('searchBar') }}" class="btn btn-primary px-5 py-3">Recherche</a></p>

                    </div>
                </div>
            </div>


        </div>
    </div>

</div>
    <div class="container">

        <h1 class="text-center my-5">Nos derniers biens</h1>

        <div class="row">
            {% for property in lastProperty [0:3]%}

                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        {% set property_image = vich_uploader_asset(property, 'pictureFile') ? vich_uploader_asset(property, 'pictureFile') : 'http://placehold.it/900x350' %}
                        <a href="{{ path('detailProperty', { slug: property.slug, id: property.id})  }}"><img class="d-block img-fluid border-radius" src="{{ property_image }}"></a>
                    </div>
                </div>

            {% endfor %}

        </div>

    </div>
{% endblock %}
