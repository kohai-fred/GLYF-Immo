{% extends 'base.html.twig' %}
    {% block title %}Bien Immobilier!{% endblock %}

    {% block body %}
        {% include 'incs/background_header.html.twig' %}

        {% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/searchcss/main.css') }}">{% endblock %}


        <form>
            <fieldset>
                <legend>Recherchez votre bien</legend>
            </fieldset>
            <div class="inner-form">
                <div class="input-field first-wrap">
                    <div class="icon-wrap">
                        <select data-trigger="" name="choices-single-defaul">
                            <option placeholder="">Achat/Location</option>
                            <option>Achat</option>
                            <option>Location</option>
                        </select>
                    </div>
                    <input class="datepicker" id="depart" type="text" placeholder="Prix min" />
                </div>
                <div class="input-field third-wrap">
                    <div class="icon-wrap">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M17 12h-5v5h5v-5zM16 1v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2h-1V1h-2zm3 18H5V8h14v11z"></path>
                        </svg>
                    </div>
                    <input class="datepicker" id="return" type="text" placeholder="Prix max" />
                </div>
                <div class="input-field fouth-wrap">
                    <div class="icon-wrap">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"></path>
                        </svg>
                    </div>
                </div>
                <div class="input-field fifth-wrap">
                    <button class="btn-search" type="button">SEARCH</button>
                </div>
            </div>
        </form>

        {% for research in search %}
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="mb-5">
                        <p class="text-black mb-4"></p>
                        <h1 class="font-weight-bold">{{research.title}}</h1>
                        <h3>{{research.numberOfParts}} pièces - {{ research.surface }} M2</h3>
                        <h2 class="text-primary font-weight-bold">{{ research.formatedPrice }} €</h2>
                        <p>{{ research.description | nl2br }}</p>
                    </div>
                </div>
                <div class="mt-5">
                    <table class="table table-stripped">
                        <tr>
                            <td>Surface</td>
                            <td>{{ research.surface }} M2</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td>{{ research.numberOfParts }}</td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td>{{ research.numberOfBedrooms }}</td>
                        </tr>
                        <tr>
                            <td>Etage</td>
                            <td>{{ research.floor }}</td>
                        </tr>
                        <tr>
                            <td>Chauffage</td>
                            <td>{{ research.heater }}</td>
                        </tr>
                    </table>
                    <p><a href="#" class="btn btn-primary btn-sm">Contactez notre Agence</a></p>
                    <br>
                </div>
            </div>
        </div>


        {% endfor %}

        {% block javascripts %}
            <script src="{{ asset('js/searchjs/main.js') }}"></script>
            <script src="{{ asset('js/searchjs/choice.js') }}"></script>
            <script src="{{ asset('js/searchjs/custom-materialize.js') }}"></script>
            <script src="{{ asset('js/searchjs/flatpickr.js') }}"></script>
        {% endblock %}
    {% endblock %}


